<div class="fs-row">

{% include 'page-header' %}

{% for collection in collections %}

  <div class="fs-cell fs-lg-half fs-md-half fs-sm-3 collection-item text-center collection-item__{{ collection.handle }}">
    <div class="collection-item__thumb">
    	<a href="{{ collection.url }}">
    		<div class="wallpaper" data-background-options='{"source":"{{ collection.image | img_url: 'grande' }}"}'>
         <img src="{{ 'transparent.png' | asset_url }}" class="img-responsive" />
        </div>
    	</a>
    </div>
    <header class="collection-item__header">
      <h2 class="collection-item__title">{{ collection.title }}</h2>
    </header>
    <div class="collection-item__desc">{{ collection.description }}</div>
    <a class="collection-item__link btn btn--link" href="{{ collection.url }}">View Products</a>
    <hr class="invisible">
  </div>

{% endfor %}

</div>